@model SistemaDeportes.Web.Models.ViewModel.VMPDFJugador;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Informe</title>
    <style>
        .contenedor {
            width: 900px !important;
            height: 842px !important;
            margin: auto;
        }

        body {
            font-family: Arial, Helvetica, sans-serif
        }

        p.title {
            font-weight: bold;
        }

        p.title2 {
            font-weight: bold;
            color: #03A99F;
            font-size: 20px;
        }

        p.text {
            font-size: 15px;
            font-weight: 100;
            color: #858585;
        }

        p {
            margin: 0px
        }

        .tbth {
            text-align: left;
        }

        table.tbproductos {
            border-collapse: separate;
            border-spacing: 4px;
        }

            table.tbproductos thead tr th {
                background-color: #03A99F;
                padding: 10px;
                font-size: 15px;
                color: white;
            }

            table.tbproductos tbody tr td {
                padding: 10px;
            }

        .item {
            font-size: 15px;
            font-weight: 100;
            color: #757575;
        }

        .item-2 {
            font-size: 15px;
            font-weight: bold;
            color: #757575;
        }

        .item-3 {
            font-size: 15px;
            font-weight: bold;
            background-color: #03A99F;
            color: white;
        }

        .td-item {
            border-bottom: 2px solid #E8E8E8 !important;
        }
    </style>
</head>
<body>

    <div class="contenedor">

        <table style="width:100%">
            <tr>
                <td>
                    <img src="~/img/SportsLogo.png" style="width: 120px;height:120px" />
                </td>
                <td style="text-align:right">
                    <table style="margin-right:0;margin-left:auto">
                        <tr>
                            <td>
                                <p class="title2">DOCUMENTO</p>
                            </td>
                        </tr>
                        <tr>
                            <td>@Model.usuario.Documento</td>
                        </tr>
                    </table>
                </td>
            </tr>
        </table>
        <br />
        <table style="width:100%">
            <tr>
                <td>
                    <table>
                        <tr>
                            <td>
                                <p class="title">SPORTS</p>
                            </td>
                        </tr>
                    </table>
                </td>
                <td style="text-align:right">
                    <table style="margin-right:0;margin-left:auto">
                        <tr>
                            <td>
                                <p class="title">JUGADOR</p>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <p class="text">@Model.usuario.Nombre</p>
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
        </table>
        <br />
        <br />

        <table class="tbproductos" style="width:100%">
            <thead>
                <tr>
                    <th class="tbth" style="width:100px">Partidos Jugados</th>
                    <th class="tbth" style="width:100px">Goles</th>
                    <th class="tbth" style="width:100px">Asistencias</th>
                    <th class="tbth" style="width:100px">Tarjetas Amarillas</th>
                    <th class="tbth" style="width:100px">Tarjetas Rojas</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class="td-item"><p class="item">@Model.estadistica.PartidosJugados</p></td>
                    <td class="td-item"><p class="item">@Model.estadistica.Goles</p></td>
                    <td class="td-item"><p class="item">@Model.estadistica.Asistencias</p></td>
                    <td class="td-item"><p class="item">@Model.estadistica.Amarillas</p></td>
                    <td class="td-item"><p class="item">@Model.estadistica.Rojas</p></td>
                </tr>
                @{
                    // Calcular los promedios
                    var promedioGoles = (double)Model.estadistica.Goles / Model.estadistica.PartidosJugados;
                    var promedioAsistencias = (double)Model.estadistica.Asistencias / Model.estadistica.PartidosJugados;
                    var promedioAmarillas = (double)Model.estadistica.Amarillas / Model.estadistica.PartidosJugados;
                    var promedioRojas = (double)Model.estadistica.Rojas / Model.estadistica.PartidosJugados;
                }
                <tr>
                    <td class="td-item">
                        <p class="item-2">Promedio</p>
                    </td>
                    <td class="td-item"><p class="item">@promedioGoles.ToString("0.00")</p></td>
                    <td class="td-item"><p class="item">@promedioAsistencias.ToString("0.00")</p></td>
                    <td class="td-item"><p class="item">@promedioAmarillas.ToString("0.00")</p></td>
                    <td class="td-item"><p class="item">@promedioRojas.ToString("0.00")</p></td>
                </tr>

            </tbody>
        </table>

    </div>

</body>
</html>

